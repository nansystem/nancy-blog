// https://github.com/vuejs/vuepress/blob/master/packages/%40vuepress/core/lib/app/style/config.styl
$accentColor = $primary-color-dark
$textColor = #666
$borderColor = #eaecef
$codeBgColor = #282c34
$arrowBgColor = #ccc

$backgroundColor = #fefefe

* {
  font-family: Arial, sans-serif !important;
}
html, body, #header, body {
  background: $backgroundColor !important;
}
.content-wrapper {
  padding-top: 100px;
  min-height: calc(100vh - 80px - 60px - 100px);
  a {
      word-break: break-all;
  }
}

@media (max-width: 419px) {
  #page-title {
    padding-top: 32px 
  }
  .vuepress-blog-theme-content:not(.custom) {
    padding-right: 0;
    padding-left: 0;
  }
}
@media (min-width: 959px) {
  .vuepress-blog-theme-content:not(.custom) {
    max-width: 860px;
  }
}

@media (min-width: 1280px) {
  .vuepress-toc {
      display: block;
  }
}

.vuepress-toc {
  max-width: 240px;
  width 240px
  padding-top: 100px;

  .vuepress-toc-item {
    padding: 0.1rem 0.6rem 0.1rem 0.6rem;
    a {
      overflow: initial;
      text-overflow: initial;
      white-space: initial;
    }
  }
}

.content code {
  color: #858585;
  padding: .25rem .5rem;
  margin: 0;
  font-size: .85em;
  background-color: rgba(27,31,35,.05);
  border-radius: 3px;
}

// codeの上書き
.vuepress-blog-theme-content code {
    color: #476582;
    padding: .25rem .5rem;
    margin: 0;
    font-size: .85em;
    background-color: rgba(27,31,35,.05);
    border-radius: 3px;
}